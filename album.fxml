<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.AlbumController">
    <center>
        <ListView fx:id="photoListView"/>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <Button text="添加照片" onAction="#handleAddPhoto"/>
            <Button text="删除照片" onAction="#handleDeletePhoto"/>
            <Button text="返回" onAction="#handleBack"/>
        </HBox>
    </bottom>
    <right>
        <Label fx:id="photoDetailsLabel" text="照片详情" wrapText="true"/>
    </right>
</BorderPane>
